    <!--login popup-->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="row">
                    <div class='col-md-3'></div>
                    <div class="col-md-6">
                        <div class="login-box well">
                            <form action="">
                                <div class="form-group">
                                    <label for="username-email">Brugernavn</label>
                                    <input value='' id="username-email" placeholder="Brugernavn" type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input id="password" value='' placeholder="Password" type="text" class="form-control" />
                                </div>
                                <div class="input-group">

                                    <label>
                                        <input id="login-remember" type="checkbox" name="remember" value="1"> Husk mig
                                    </label>
                                    <div class="loginPos">
                                        <a href="#" class="loginFont" data-toggle="modal" data-target="#myModal">
                                            LOGIN <i class="fa fa-sign-in" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                                <!--<div class="form-group">
                                    <a href="#" class="btn btn-login" data-toggle="modal" data-target="#myModal">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i> LOGIN
                                    </a>
                                </div>-->
