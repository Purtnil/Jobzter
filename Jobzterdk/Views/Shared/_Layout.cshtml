                                    <a href="/resetting/request" class="text-sm text-left">Glemt login?</a>
                                    <a href="/Home/OpretVirk/" class="text-sm text-right">Opret virksomhed</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class='col-md-3'></div>
                </div>
            </div>
        </div>
    </div>
    <!--login popup END-->
        @RenderBody()

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>