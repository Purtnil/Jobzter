                <input type="text" id="myVIInput" class="inputToDo" placeholder="Titel...">
                <span onclick="myVIInput()" class="addBtn">Tilføj</span>
            </div>

            <div class="ToDoList">

                <ul id="myVI"></ul>
            </div>


            <input type="submit" value="Opret annonce" name="submit" class="txt2 pull-right">
        </div>
    </form>


</div>
