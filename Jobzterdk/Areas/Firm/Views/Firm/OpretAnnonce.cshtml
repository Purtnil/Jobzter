
@{
    ViewBag.Title = "OpretAnnonce";
}
<script>
    $(function () {
        $("#slider-range").slider({
            range: true,
            min: 1,
            max: 37,
            values: [8, 15],
            slide: function (event, ui) {
                $("#amount").val(ui.values[0] + " - " + ui.values[1]);
            }
        });
        $("#amount").val($("#slider-range").slider("values", 0) +
            " - " + $("#slider-range").slider("values", 1));
    });
</script>

<div class="row OpretAnnoncePOS">

    <div class="col-md-4 col-lg-offset-3 col-md-offset-5 col-sm-offset-5">
        <h2>Opret ny annonce</h2>

    </div>

    <form action="/Firm/Firm/" method="post" >
        <div class="col-lg-3 col-md-5 col-lg-offset-3 col-md-offset-5 col-sm-offset-5">
            <div class="form_main">
                <div class="form">
                    <select required="" name="stilling" class="form-control txtSelect">
                        <option value="" disabled selected>Stilling</option>
                        <option value="arabic">Arabic</option>
                        <option value="english">English</option>
                        <option value="french">French</option>
                        <option value="german">German</option>
                        <option value="other">Other</option>
                    </select>
                    <select required="" name="jobtype" class="form-control txtSelect">
                        <option value="" disabled selected>Jobtype</option>
                        <option value="arabic">Arabic</option>
                        <option value="english">English</option>
                        <option value="french">French</option>
                        <option value="german">German</option>
                        <option value="other">Other</option>
                    </select>
                    <select required="" name="Alder" class="form-control txtSelect">
                        <option value="" disabled selected>Alder</option>
                        <option value="arabic">Arabic</option>
                        <option value="english">English</option>
                        <option value="french">French</option>
                        <option value="german">German</option>
                        <option value="other">Other</option>
                    </select>
                    <input type="text" required="" placeholder="Overskrift" value="" name="overskrift" class="txt">
                    <textarea class="form-control" rows="10" id="comment" placeholder="Detaljeret jobbeskrivelse..."></textarea>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-5 col-lg-offset-1 col-md-offset-5 col-sm-offset-5">
            <table>
                <tr>
                    <td><h4>Job start:</h4></td>
                    <td><input type="checkbox" name="name" value="" /> Snarest</td>
                    <td><input type="date" /></td>
                </tr>
                <tr>
                    <td><h4>Job slut:</h4></td>
                    <td><input type="checkbox" name="name" value="" /> Ubegrænset</td>
                    <td><input type="date" /></td>
                </tr>
            </table>
            <!--Job start: <input type="checkbox" name="name" value="" /> Snarest <input type="date" />
            <br />
            Job slut: <input type="checkbox" name="name" value="" /> Ubegrænset <input type="date" />-->
            <p>
                <label for="amount">Timer om ugen:</label>
                <input type="text" id="amount">
            </p>

            <div id="slider-range"></div>@*ret*@


            <div class="header">
                <h4>Opgaver</h4>
                <input type="text" id="myInput" class="inputToDo" placeholder="Titel...">
                <span onclick="myInput()" class="addBtn">Tilføj</span>
            </div>

            <div class="ToDoList">

                <ul id="myUL"></ul>
            </div>

            <div class="header">
                <h4>Kompetencer</h4>
                <input type="text" id="myKOMInput" class="inputToDo" placeholder="Titel...">
